-- üåê XYZ Hub: Nurik Glass Edition (—Å Ease In-Out)

-- –£–¥–∞–ª–µ–Ω–∏–µ —Å—Ç–∞—Ä–æ–≥–æ GUI
if game.Players.LocalPlayer.PlayerGui:FindFirstChild("XYZHub") then
    game.Players.LocalPlayer.PlayerGui.XYZHub:Destroy()
end

local plr = game.Players.LocalPlayer
local rs = game:GetService("RunService")
local uis = game:GetService("UserInputService")
local tweenService = game:GetService("TweenService")
local blur = Instance.new("BlurEffect", game.Lighting)
blur.Size = 0 -- –ù–∞—á–∞–ª—å–Ω–æ–µ —Ä–∞–∑–º—ã—Ç–∏–µ

local gui = Instance.new("ScreenGui", plr.PlayerGui)
gui.Name = "XYZHub"

-- üü¢ –ö—Ä—É–≥–ª—ã–π –ª–∞—É–Ω—á–µ—Ä
local launcher = Instance.new("Frame", gui)
launcher.Size = UDim2.new(0, 60, 0, 60)
launcher.Position = UDim2.new(0.1, 0, 0.5, -30)
launcher.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
launcher.BackgroundTransparency = 0.15
launcher.BorderSizePixel = 0
Instance.new("UICorner", launcher).CornerRadius = UDim.new(1, 0)

local openText = Instance.new("TextLabel", launcher)
openText.Size = UDim2.new(1, 0, 1, 0)
openText.Text = "‚ò∞"
openText.TextColor3 = Color3.fromRGB(255, 255, 255)
openText.TextScaled = true
openText.BackgroundTransparency = 1
openText.Font = Enum.Font.GothamBold

-- üåå –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 450, 0, 500)
frame.Position = UDim2.new(0.5, -225, 0.5, -250)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BackgroundTransparency = 1
frame.BorderSizePixel = 0
frame.Visible = false
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 15)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "üåê XYZ Hub"
title.TextColor3 = Color3.fromRGB(255, 80, 80)
title.Font = Enum.Font.GothamBold
title.TextSize = 26
title.BackgroundTransparency = 1

-- ‚ùå –ö–Ω–æ–ø–∫–∞ –∑–∞–∫—Ä—ã—Ç–∏—è
local closeBtn = Instance.new("TextButton", frame)
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -40, 0, 10)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
closeBtn.TextScaled = true
closeBtn.Font = Enum.Font.GothamBold
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(1, 0)
closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
    blur.Size = 0
end)

-- üìë –†–∞–∑–¥–µ–ª—ã —Å –≥—Ä–∞–¥–∏–µ–Ω—Ç–æ–º
local categories = {"Player", "Combat", "Visuals"}
for i, cat in pairs(categories) do
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0.3, -10, 0, 40)
    btn.Position = UDim2.new(0, 10 + (i-1)*150, 0, 60)
    btn.BackgroundColor3 = Color3.fromRGB(255 - i*30, 50 + i*40, 50)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Text = cat
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    Instance.new("UICorner", btn).CornerRadius = UDim.new(1, 0)

    -- Hover Effect
    btn.MouseEnter:Connect(function()
        btn.BackgroundTransparency = 0.1
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundTransparency = 0.3
    end)
end

-- ‚ö° Dragging –¥–ª—è –ª–∞—É–Ω—á–µ—Ä–∞
local dragging, dragInput, dragStart, startPos
launcher.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = launcher.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
launcher.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)
rs.RenderStepped:Connect(function()
    if dragging and dragInput then
        local delta = dragInput.Position - dragStart
        launcher.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- üåå –û—Ç–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é —Å Ease In-Out
local menuOpen = false
launcher.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 and not dragging then
        menuOpen = not menuOpen
        if menuOpen then
            frame.Visible = true
            tweenService:Create(
                blur,
                TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                {Size = 10}
            ):Play()
            tweenService:Create(
                frame,
                TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                {BackgroundTransparency = 0.2}
            ):Play()
        else
            local blurTween = tweenService:Create(
                blur,
                TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                {Size = 0}
            )
            local frameTween = tweenService:Create(
                frame,
                TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                {BackgroundTransparency = 1}
            )
            blurTween:Play()
            frameTween:Play()
            frameTween.Completed:Wait()
            frame.Visible = false
        end
    end
end)
