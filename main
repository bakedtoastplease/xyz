-- üåê XYZ Hub: Nurik Lite
local plr = game.Players.LocalPlayer
local rs = game:GetService("RunService")
local uis = game:GetService("UserInputService")

local gui = Instance.new("ScreenGui", plr.PlayerGui)
gui.Name = "XYZHub"

-- üü¢ –ö—Ä—É–≥–ª—ã–π –ª–∞—É–Ω—á–µ—Ä
local launcher = Instance.new("Frame", gui)
launcher.Size = UDim2.new(0, 60, 0, 60)
launcher.Position = UDim2.new(0.1, 0, 0.5, -30)
launcher.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
launcher.BackgroundTransparency = 0.15
launcher.BorderSizePixel = 0
Instance.new("UICorner", launcher).CornerRadius = UDim.new(1, 0)

local openText = Instance.new("TextLabel", launcher)
openText.Size = UDim2.new(1, 0, 1, 0)
openText.Text = "‚ò∞"
openText.TextColor3 = Color3.fromRGB(255, 255, 255)
openText.TextScaled = true
openText.BackgroundTransparency = 1
openText.Font = Enum.Font.GothamBold

-- üåå –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 400, 0, 500)
frame.Position = UDim2.new(0.5, -200, 0.5, -250)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.2
frame.BorderSizePixel = 0
frame.Visible = false
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 15)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "üåê XYZ Hub"
title.TextColor3 = Color3.fromRGB(0, 255, 128)
title.Font = Enum.Font.GothamBold
title.TextSize = 24
title.BackgroundTransparency = 1

-- Dragging logic for launcher
local dragging = false
local dragInput, dragStart, startPos
launcher.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = launcher.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
launcher.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)
rs.RenderStepped:Connect(function()
    if dragging and dragInput then
        local delta = dragInput.Position - dragStart
        launcher.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- –û—Ç–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é
local menuOpen = false
launcher.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 and not dragging then
        menuOpen = not menuOpen
        frame.Visible = menuOpen
    end
end)
